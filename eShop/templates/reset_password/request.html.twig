{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe
{% endblock %}

{% block body %}
	{{ include("partials/title_section.html.twig", {'titre':"Réinitialisation mot de passe"} ) }}

	<!--  -->
	<div class="login_register_wrap section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-6 col-md-10">
					<div class="login_wrap">
						<div class="padding_eight_all bg-white">
							<div
								class="heading_s1">{# <h3>Rejoindre eShop !</h3> #}
							</div>

							{% for flashError in app.flashes('reset_password_error') %}
								<div class="alert alert-danger" role="alert">{{ flashError }}</div>
							{% endfor %}
							<h2>Mot de passe oublié</h2>

							{{ form_start(requestForm) }}
							{{ form_row(requestForm.email) }}
							<div>
								<small>
									<p>Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe</p>
								</small>
							</div>

							<button class="btn btn-fill-out btn-block">Valider</button>

							{{ form_end(requestForm) }}


						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
